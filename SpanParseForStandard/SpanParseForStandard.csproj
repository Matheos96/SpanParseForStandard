<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>

    <!-- NuGet -->
    <PackageId>io.github.matheos96.SpanParseForStandard</PackageId>
    <Title>SpanParseForStandard</Title>
    <Version>1.0.0-1</Version>
    <Authors>matheos</Authors>
    <PackageTags>Span;ReadOnlySpan;Parsing;Convert;Double;Integer;Standard;Framework</PackageTags>
    <Description>
      This simple Library adds integer and double parsing methods for ReadOnlySpan&lt;char&gt; found in .NET but missing in .NET Framework and .NET Standard. Each parsing method also has a "TryParse" variant.
    </Description>
    <IncludeContentInPack>true</IncludeContentInPack>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../LICENSE.txt" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.5" />
  </ItemGroup>

  

</Project>
